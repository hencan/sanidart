<div class="container my-4">
  <div class="card">
    <div class="card-header">Posts</div>
    <div class="card-body">
      <h5 class="card-title">Índice</h5>
      <div class="card-text overflow-auto">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Id</th>
              <th>Capa</th>
              <th>Título</th>
              <th>Categoria</th>
              <th>Visível</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.id %></td>
                
                <% if post.image.nil? %>
                  <td><img style='width:100px' class="img-thumbnail" src ="data:image/jpeg;base64,"></td>
                <% else %>
                  <td><%= image_tag(post.image, style:'width:100px', class: "img-thumbnail") %></td>
                <% end %>

                <td><%= post.title %></td>
                <td><%= post.category %></td>
                <% if post.visible %>
                  <td><i class="bi bi-check-square"></i></td>
                <% else %>
                  <td><i class="bi bi-square"></i></td>
                <% end %>
                <td><%= link_to post, class:"btn btn-outline-dark border-0" do %>
                    <i class="bi bi-eye-fill"></i>
                  <% end %>
                </td>
                <td><%= link_to edit_post_path(post), class:"btn btn-outline-dark border-0" do %>
                    <i class="bi bi-pencil-fill"></i>
                  <% end %>
                </td>
                <td><%= link_to post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger border-0" do %>
                    <i class="bi bi-trash-fill"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to 'Novo Post', new_post_path, class:"btn btn-outline-primary my-2" %>
    </div>
    <div class="card-footer text-muted"><%= will_paginate @posts, class:"digg_pagination" %></div>
  </div>
</div>
